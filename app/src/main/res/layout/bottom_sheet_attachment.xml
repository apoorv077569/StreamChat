<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/optionGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_photo_24"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:text="Gallery"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/optionCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_camera_alt_24"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:text="Camera"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/optionFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_attach_file_24"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:text="File"
        android:textSize="16sp" />
</LinearLayout>
