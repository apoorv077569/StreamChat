<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".activities.MainActivity">

    <!-- BACK BUTTON -->
    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_arrow_back_ios_24"
        android:padding="6dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- NAME TEXT -->
    <TextView
        android:id="@+id/txtName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/imgBack"
        app:layout_constraintEnd_toStartOf="@id/imgSignout"
        app:layout_constraintTop_toTopOf="@id/imgBack"
        app:layout_constraintBottom_toBottomOf="@id/imgBack"
        android:gravity="center" />

    <!-- SIGNOUT -->
    <ImageView
        android:id="@+id/imgSignout"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/icon_background"
        android:padding="6dp"
        android:src="@drawable/logout"
        android:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgBack" />

    <!-- CONTENT CARD (ROUNDED TOP) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/contentCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="35dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/imgBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <!-- PROFILE IMAGE -->
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    app:riv_oval="true"
                    android:background="@drawable/background_image" />

                <!-- NAME -->
                <EditText
                    android:id="@+id/profileUsername"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/background_input"
                    android:drawableStart="@drawable/name"
                    android:drawablePadding="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:enabled="false"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp" />

                <!-- EMAIL -->
                <EditText
                    android:id="@+id/profileEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/background_input"
                    android:drawableStart="@drawable/email"
                    android:drawablePadding="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:enabled="false"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp" />

                <!-- PHONE -->
                <EditText
                    android:id="@+id/profilePhone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/background_input"
                    android:drawableStart="@drawable/phone"
                    android:drawablePadding="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:enabled="false"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp" />

                <!-- ENABLE EDIT BUTTON -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEnableEdit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/enable_editing"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/primary"
                    app:cornerRadius="10dp" />

                <!-- UPDATE BUTTON + PROGRESS -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:animateLayoutChanges="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/update_profile"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/primary"
                        app:cornerRadius="10dp" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                </FrameLayout>

            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
